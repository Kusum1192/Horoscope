        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Place"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="12dp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/place"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="12dp"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:theme="@style/LayoutTheme"
            android:weightSum="2"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Sign"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="12dp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/zodicSigns"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="12dp"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Timezone"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="12dp"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="GMT+5.5"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="12dp"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:theme="@style/LayoutTheme"
            android:weightSum="2"
            >

            <TextView
                android:id="@+id/editBirthDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableLeft="@drawable/ic_edit_note"
                android:padding="12dp"
                android:textAlignment="center"
                android:text="@string/change_birth_details"
                android:textColor="@color/purple_700"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/birth_details" />
        </LinearLayout>
    </LinearLayout>
